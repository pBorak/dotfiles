[user]
	name = Pawel Borak
	email = borak.pawel@gmail.com
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
	editor = nvim
	pager = delta
[fetch]
	prune = true
[color]
	ui = auto
[commit]
	template = ~/.gitmessage
[init]
	templatedir = ~/.git_template
[push]
  default = upstream
[alias]
	aa = add --all
	b = branch
	ca = commit --amend
	ce = commit --amend --no-edit
	co = checkout
	conflicted = !nvim +Conflicted
	dc = diff --cached
	l = log --oneline --decorate --graph -20
	ll = log --graph --format=\"%C(yellow)%h%C(red)%d%C(reset) - %C(bold green)(%ar)%C(reset) %s %C(blue)<%an>%C(reset)\"
	pl = pull
	plr = pull --rebase
	ps = push
	uncommit = reset --soft HEAD^
	unstage = reset
	upstream = rev-parse --abbrev-ref --symbolic-full-name @{u}
	bsel = !git branch | grep -v '^*' | fzf-tmux --reverse | xargs git checkout
[delta]
	line-numbers = true
	syntax-theme = nightfly
[diff]
	colorMoved = default
