[user]
	name = Pawel Borak
	email = borak.pawel@gmail.com
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
	editor = nvim
	pager = delta
[fetch]
	prune = true
[color]
	ui = auto
[commit]
	template = ~/.gitmessage
[init]
	templatedir = ~/.git_template
[push]
  default = upstream
[alias]
	aa = add --all
  abort = abort
	b = branch
	ca = commit --amend
	ce = commit --amend --no-edit
	co = checkout
	conflicted = !nvim +Conflicted
  continue = continue
	dc = diff --cached
	l = log --oneline --decorate --graph -20
  ll  = "log --graph --date=human --format='%C(#e3d18a)%h%C(#fc514e)%d%C(reset) - %C(#21c7a8)(%ad)%C(reset) %s %C(#80a0ff){%an}%C(reset)'"
  mup = !git checkout master && git fetch origin && echo && git l master..origin/master && echo && git pull --quiet && git checkout -
	pl = pull
	plr = pull --rebase
	ps = push
  rbm = !git mup && git rebase master
  rim = !git rebase -i $(git merge-base master HEAD)
  riu = !git rebase -i $(git upstream)
	uncommit = reset --soft HEAD^
	unstage = reset
	upstream = rev-parse --abbrev-ref --symbolic-full-name @{u}
[delta]
	line-numbers = true
	syntax-theme = nightfly
[diff]
	colorMoved = default
