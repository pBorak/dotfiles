[user]
	name = Pawel Borak
	email = borak.pawel@gmail.com
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
	editor = nvim
	pager = delta
[fetch]
	prune = true
[color]
	ui = auto
[commit]
	template = ~/.gitmessage
[push]
  default = current
  autoSetupRemote = true
[alias]
	aa = add --all
  abort = abort
	b = branch
	ca = commit --amend
	ce = commit --amend --no-edit
	co = checkout
	conflicted = !nvim +Conflicted
  continue = continue
	d = diff
	dc = diff --cached
  mup = !git checkout main && git fetch origin && echo && git l main..origin/main && echo && git pull --quiet && git checkout -
  gone = "!f() { git fetch --all --prune; git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -D; }; f"
  fa = fetch --all
	l = log --oneline --decorate -20
  ll  = "log --graph --date=human --format='%C(#f4dbd6)%h%C(#ed8796)%d%C(reset) - %C(#a6da95)(%ad)%C(reset) %s %C(#8aadf4){%an}%C(reset)'"
	pl = pull
	plr = pull --rebase
	ps = push
	psf = push --force-with-lease
	publish = publish
  rim = !git rebase -i $(git merge-base main HEAD)
  riu = !git rebase -i $(git upstream)
	uncommit = reset --soft HEAD^
	unstage = reset
	upstream = rev-parse --abbrev-ref --symbolic-full-name @{u}
[delta]
	line-numbers = true
[diff]
	colorMoved = default
[pull]
  ff = only
