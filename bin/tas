#!/bin/sh

if [[ $# -eq 1 ]]; then
    path_name=$1
else
    items=`find ~/code -maxdepth 1 -mindepth 1 -type d`
    path_name=`echo "$items" | fzf --no-multi`
fi

if [[ $path_name == '' ]]; then
  exit 0
fi

session_name=`basename $path_name`

not_in_tmux() {
  [ -z "$TMUX" ]
}

session_exists() {
  tmux has-session -t "=$session_name"
}

create_detached_session() {
  (TMUX='' tmux new-session -c $path_name -Ad -s "$session_name")
}

create_if_needed_and_attach() {
  if not_in_tmux; then
    tmux new-session -c $path_name -As "$session_name"
  else
    if ! session_exists; then
      create_detached_session
    fi
    tmux switch-client -t "$session_name"
  fi
}

create_if_needed_and_attach
